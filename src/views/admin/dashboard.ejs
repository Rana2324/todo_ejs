<%- include('./partials/header') %>

<div class="max-w-6xl mx-auto">
    <div class="mb-6 flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-800">
            <i class="fas fa-user-shield mr-2"></i>Admin Dashboard
        </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Users Management Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-blue-600 text-white px-6 py-4">
                <h3 class="font-bold text-lg"><i class="fas fa-users mr-2"></i>Users</h3>
            </div>
            <div class="p-6">
                <p class="text-gray-600 mb-4">Manage users, change roles, and reset passwords.</p>
                <div id="user-count" class="text-2xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-spinner fa-spin"></i> Loading...
                </div>
                <a href="/admin/users" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md inline-block">
                    <i class="fas fa-cog mr-1"></i> Manage Users
                </a>
            </div>
        </div>

        <!-- Todos Stats Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-green-600 text-white px-6 py-4">
                <h3 class="font-bold text-lg"><i class="fas fa-tasks mr-2"></i>Todos</h3>
            </div>
            <div class="p-6">
                <p class="text-gray-600 mb-4">View and manage all todos across the system.</p>
                <div id="todo-stats" class="grid grid-cols-2 gap-4 mb-4">
                    <div class="bg-gray-100 p-3 rounded">
                        <div class="text-sm text-gray-600">Total</div>
                        <div id="todo-count-total" class="text-2xl font-bold text-gray-800">
                            <i class="fas fa-spinner fa-spin"></i>
                        </div>
                    </div>
                    <div class="bg-gray-100 p-3 rounded">
                        <div class="text-sm text-gray-600">Completed</div>
                        <div id="todo-count-completed" class="text-2xl font-bold text-green-600">
                            <i class="fas fa-spinner fa-spin"></i>
                        </div>
                    </div>
                </div>
                <a href="/admin/todos" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md inline-block">
                    <i class="fas fa-list mr-1"></i> View All Todos
                </a>
            </div>
        </div>

        <!-- System Info Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-purple-600 text-white px-6 py-4">
                <h3 class="font-bold text-lg"><i class="fas fa-server mr-2"></i>System</h3>
            </div>
            <div class="p-6">
                <p class="text-gray-600 mb-4">System information and maintenance options.</p>
                <div class="space-y-2 mb-4">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Environment:</span>
                        <span id="system-env" class="font-bold">
                            <%= process.env.NODE_ENV || 'development' %>
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Version:</span>
                        <span id="system-version" class="font-bold">1.0.0</span>
                    </div>
                </div>
                <a href="/admin/logs" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-md inline-block">
                    <i class="fas fa-file-alt mr-1"></i> View Logs
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Admin Dashboard JavaScript -->
<script type="module" src="/js/admin/dashboard.js"></script>

<%- include('./partials/footer') %>