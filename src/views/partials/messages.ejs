<!-- Success Messages -->
<% if (messages.success && messages.success.length > 0) { %>
  <div id="success-msg" class="hidden"><%= messages.success %></div>
<% } %>

<!-- Error Messages -->
<% if (messages.error && messages.error.length > 0) { %>
  <div id="error-msg" class="hidden"><%= messages.error %></div>
<% } %>

<!-- Info Messages -->
<% if (messages.info && messages.info.length > 0) { %>
  <div id="info-msg" class="hidden"><%= messages.info %></div>
<% } %>

<!-- Warning Message -->
<% if(messages.warning && messages.warning.length > 0) { %>
<div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4" role="alert">
    <p><i class="fas fa-exclamation-triangle"></i> <%= messages.warning %></p>
</div>
<% } %>
