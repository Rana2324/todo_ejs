{
  "name": "todo_app_ejs",
  "version": "1.0.0",
  "description": "A professional To-Do app using Node.js, Express, MongoDB, EJS, and Tailwind CSS",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\"",
    "validate": "npm run lint && npm run format:check"
    
  },
  "keywords": [
    "todo",
    "express",
    "mongodb",
    "ejs",
    "tailwindcss",
    "axios"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.3",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "mongoose": "^8.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
