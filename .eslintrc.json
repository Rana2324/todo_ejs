{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "$": "readonly",
    "DataTable": "readonly"
  },
  "rules": {
    "prettier/prettier": ["error", {
      "endOfLine": "auto"
    }],
    "no-console": ["warn", {
      "allow": ["warn", "error", "info", "debug"]
    }],
    "no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_"
    }],
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "quotes": ["error", "single", {
      "avoidEscape": true
    }],
    "semi": ["error", "always"]
  }
  
}
